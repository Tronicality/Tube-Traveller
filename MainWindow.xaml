<Window x:Class="Tube_Traveller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tube_Traveller"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Lines">
        <RichTextBox x:Name="dataDisplay" HorizontalAlignment="Left" Height="245" Margin="35,141,0,0" VerticalAlignment="Top" Width="700" IsEnabled="False">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="inputBox" HorizontalAlignment="Left" Height="27" Margin="182,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176"/>
        <Button x:Name="btnInput" Content="Line And Stuff" HorizontalAlignment="Left" Height="28" Margin="633,85,0,0" VerticalAlignment="Top" Width="102" Click="btnInput_Click"/>
        <Label Content="Type in Line number:" HorizontalAlignment="Left" Height="27" Margin="35,85,0,0" VerticalAlignment="Top" Width="142"/>

    </Grid>
</Window>
